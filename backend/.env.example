# Backend Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to Git

# Spotify API Credentials
# Get these from: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# Spotify OAuth Redirect URI
# For development: http://127.0.0.1:5000/api/callback
# For production: https://your-backend-service.up.railway.app/api/callback
SPOTIFY_REDIRECT_URI=http://127.0.0.1:5000/api/callback

# OpenAI API Key
# Get this from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Flask Secret Key
# Generate a random string for sessions (e.g., use: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your_random_secret_key_here

# Frontend URL for CORS
# For development: http://localhost:5173
# For production: https://your-frontend-service.up.railway.app
FRONTEND_URL=http://localhost:5173

# Flask Configuration (optional)
FLASK_DEBUG=False
PORT=5000
